{
	"name": "omega-voice",
	"version": "0.1.0",
	"private": true,
	"main": "main.js",
	"scripts": {
		"dev": "concurrently \"node server/server.js\" \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
		"next:dev": "next dev",
		"next:build": "next build",
		"next:start": "next start",
		"electron:dev": "electron .",
		"server": "node server/server.js",
		"build": "next build && electron-builder",
		"build:win": "next build && electron-builder --win",
		"lint": "eslint"
	},
	"build": {
		"appId": "com.omega.voice",
		"productName": "Omega Voice",
		"files": [
			"main.js",
			"preload.js",
			"out/**/*",
			"public/**/*"
		],
		"directories": {
			"buildResources": "assets",
			"output": "dist"
		},
		"win": {
			"target": [
				"nsis",
				"portable"
			],
			"icon": "assets/icon.ico"
		}
	},
	"dependencies": {
		"next": "16.1.6",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"socket.io-client": "^4.8.1",
		"socket.io": "^4.8.1",
		"express": "^4.21.2",
		"cors": "^2.8.5",
		"simple-peer": "^9.11.1"
	},
	"devDependencies": {
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@types/simple-peer": "^9.11.8",
		"autoprefixer": "^10.4.20",
		"concurrently": "^9.1.0",
		"electron": "^40.3.0",
		"electron-builder": "^26.0.0",
		"eslint": "^9",
		"eslint-config-next": "16.1.6",
		"postcss": "^8.4.49",
		"tailwindcss": "^3.4.17",
		"typescript": "^5",
		"wait-on": "^8.0.0"
	}
}
